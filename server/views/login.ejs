<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Login Administrador</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 50px auto;
      max-width: 400px;
    }
    h1 {
      text-align: center;
    }
    form {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    input {
      padding: 8px;
      font-size: 1rem;
    }
    button {
      padding: 10px;
      font-size: 1rem;
      cursor: pointer;
    }
    .error {
      color: red;
      text-align: center;
      margin-bottom: 10px;
    }
    #quick-login {
      background-color: #007bff;
      color: #fff;
      border: none;
    }
  </style>
</head>
<body>

  <h1>Login Administrador</h1>

  <% if (typeof error !== 'undefined') { %>
    <div class="error"><%= error %></div>
  <% } %>

  <form action="/admin/login" method="POST">
    <label>Email:</label>
    <input type="email" name="email" required>

    <label>Contraseña:</label>
    <input type="password" name="password" required>

    <button type="submit">Ingresar</button>
  </form>

  <button id="quick-login">Acceso Rápido</button>
  <a href="/admin/register">
    <button id="register-admin">Registrar Administrador</button>
  </a>

  <script>
    document.getElementById('quick-login').addEventListener('click', () => {
      document.querySelector('input[name="email"]').value = "test@admin.com";
      document.querySelector('input[name="password"]').value = "123456";
    });
  </script>

</body>
</html>