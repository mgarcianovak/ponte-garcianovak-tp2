<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login Administrador</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Kanit:wght@300;400;500;700&display=swap"
    rel="stylesheet">
  <link rel="icon" type="image/png" href="/favicon.png" />
</head>

<body class="bg-dark text-white">
  <nav class="navbar bg-dark navbar-expand-lg fixed-top custom-navbar text-white shadow-sm py-2">
    <div class="container-fluid">
      <div class="d-flex align-items-center flex-grow-1">
        <a class="navbar-brand d-flex align-items-center text-white me-3" href="/admin/login">
          <img src="/logo.png" alt="Logo" width="40" height="40" class="me-2" />
          <span class="fs-5">TechStore</span>
        </a>
        <span class="navbar-text text-white small">Panel Administrador</span>
      </div>
    </div>
  </nav>

  <div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow bg-secondary">
      <h2 class="text-center mb-4 text-white">Login Administrador</h2>

      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger text-center mb-3"><%= error %></div>
      <% } %>

      <form action="/admin/login" method="POST" class="d-grid gap-3">
        <div class="mb-2">
          <label class="form-label text-white">Email:</label>
          <input type="email" name="email" class="form-control" required>
        </div>

        <div class="mb-2">
          <label class="form-label text-white">Contraseña:</label>
          <input type="password" name="password" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-light w-100">Ingresar</button>
      </form>

      <button id="quick-login" class="btn btn-primary w-100 mt-3">Acceso Rápido</button>
      <a href="/admin/register" class="btn btn-outline-light w-100 mt-2">Registrar Administrador</a>
    </div>
  </div>

  <script>
    document.getElementById('quick-login').addEventListener('click', () => {
      document.querySelector('input[name="email"]').value = "test@admin.com";
      document.querySelector('input[name="password"]').value = "123456";
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>