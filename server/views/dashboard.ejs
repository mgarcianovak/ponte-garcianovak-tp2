<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Panel Administrador</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 1000px;
      margin: 40px auto;
    }
    h1 {
      text-align: center;
    }
    .section {
      margin-bottom: 40px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center;
    }
    th {
      background-color: #333;
      color: white;
    }
    a.button {
      display: inline-block;
      margin: 10px 0;
      padding: 8px 12px;
      background: #007bff;
      color: white;
      text-decoration: none;
      border-radius: 4px;
    }
    form {
      display: inline-block;
    }
    button {
      padding: 5px 10px;
      margin: 0 2px;
      cursor: pointer;
    }
  </style>
</head>
<body>

  <h1>Panel de Administración</h1>

  <a href="/admin/products/new" class="button">Agregar Nuevo Producto</a>
  <a href="/admin/logout" class="button">Cerrar Sesión</a>

  <!-- ======================= -->
  <div class="section">
    <h2>Notebook</h2>
    <% if (notebook.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% notebook.forEach(p => { %>
            <tr>
              <td><%= p.id %></td>
              <td><%= p.nombre %></td>
              <td>$<%= p.precio %></td>
              <td><%= p.activo ? 'Activo' : 'Inactivo' %></td>
              <td>
                <% if (p.activo) { %>
                  <form method="POST" action="/admin/products/<%= p.id %>/deactivate">
                    <button type="submit">Desactivar</button>
                  </form>
                <% } else { %>
                  <form method="POST" action="/admin/products/<%= p.id %>/activate">
                    <button type="submit">Reactivar</button>
                  </form>
                <% } %>
                <a href="/admin/products/<%= p.id %>/edit">Editar</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No hay productos de tipo 1.</p>
    <% } %>
  </div>

  <!-- ======================= -->
  <div class="section">
    <h2>PC</h2>
    <% if (pc.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% pc.forEach(p => { %>
            <tr>
              <td><%= p.id %></td>
              <td><%= p.nombre %></td>
              <td>$<%= p.precio %></td>
              <td><%= p.activo ? 'Activo' : 'Inactivo' %></td>
              <td>
                <% if (p.activo) { %>
                  <form method="POST" action="/admin/products/<%= p.id %>/deactivate">
                    <button type="submit">Desactivar</button>
                  </form>
                <% } else { %>
                  <form method="POST" action="/admin/products/<%= p.id %>/activate">
                    <button type="submit">Reactivar</button>
                  </form>
                <% } %>
                <a href="/admin/products/<%= p.id %>/edit">Editar</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No hay productos de tipo 2.</p>
    <% } %>
  </div>

</body>
</html>